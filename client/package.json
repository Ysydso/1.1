{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.16",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.9",
    "@types/redux": "^3.6.0",
    "@types/reselect": "^2.2.0",
    "@types/styled-components": "^5.1.9",
    "graphql": "^15.5.0",
    "immer": ">=9.0.2",
    "lodash": "^4.17.20",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "reselect": "^4.0.0",
    "slugify": "^1.5.1",
    "styled-components": "^5.3.0",
    "tailwindcss": "^1.9.6",
    "typescript": "~4.2.4"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/tailwind.css -o src/tailwind.output.css",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/tailwind.output.css -c 'npm run build:tailwind'",
    "dev": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "run-s build:tailwind",
    "build": "react-scripts build && docker build -t diary-client .",
    "test": "react-scripts test",
    "lint": "eslint src/**.{ts,tsx}",
    "coverage": "CI=true react-scripts test --coverage --coverageDirectory='output/coverage/report'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.8",
    "chokidar-cli": "^2.1.0",
    "mock-apollo-client": "^1.1.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/App.tsx",
      "/src/index.tsx",
      "/src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
